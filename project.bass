(use (.git (linux/alpine/git))
     (git:github/vito/bass-loop/ref/main/bass/github.bass))

(provide [checks]
  ; a set of validations to run against a checkout of the repo
  (defn checks [src]
    {:tests (tests src [])
     :build-linux (ls (build src "dev" "linux" "amd64"))
     :build-darwin (ls (build src "dev" "darwin" "amd64"))
     :build-windows (ls (build src "dev" "windows" "amd64"))})

  (defn ls paths
    (from (linux/alpine)
      ($ ls & $paths))))

; called by bass-loop
(defn github-hook [event client]
  (github:check-hook event client git checks))
